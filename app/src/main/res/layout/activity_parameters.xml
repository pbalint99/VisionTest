<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visual acuity"
        android:textSize="24sp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum acuity (6/X)"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="start"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/minimumAcuityET"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contrast Sensitivity"
        android:textSize="24sp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use VA data for smallest frequency"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="left"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/vaCheckbox"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of trials"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/contrastNumberOfTrialsET"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum freq."
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/minFreqET"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maximum freq."
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/maxFreqET"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum contrast"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/minContrastET"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maximum contrast"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/maxContrastET"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color perception"
        android:textSize="24sp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trials per color"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/trialsPerColorET"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fill percent"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="left"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/fillET"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturation percent"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_gravity="left"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:id="@+id/saturationET"/>
</LinearLayout>

</LinearLayout>